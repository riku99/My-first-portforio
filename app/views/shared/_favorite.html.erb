<div class="favorite">
  <%= form_for(current_user.favorites.build, remote: true) do |f| %>
  <%= hidden_field_tag :discovery_id, object.id %>
  <%= f.button :type => "submit", style: 'border-style: none;', class: "i-favo" do %>
  <i class="fa fa-star"></i>
  <span class="favorite-count"><%= object.favorites.count %></span>
  <% end %>
  <% end %>
</div>
