<% provide(:title, 'Edit-profile') %>
<div class="user-edit-wrapper">
  <div class="user-edit-container">
    <%= render 'shared/error_messages', object: @user %>
    <div class="user-profile-edit">
      <%= form_for(@user) do |f| %>
      <div class="user-edit-image">

        <% if @user.image.attached? %>
        <div class="edit-image-box">
          <%= image_tag @user.image.variant(resize_to_fill: [120, 120]), class: "image edit-image" %>
        </div>
        <% else %>
        <div class="edit-image-box">
          <%= image_tag 'no-user.png', :size => '120x120', class: "no-image" %>
        </div>
        <% end %>

        <div class="field">
          <%= f.label :image, "プロフィール画像を選択", class: "form-control" %>
          <%= f.file_field :image, class: "none-form" %>
      </div>
      <div class="image-delete">
        <% if @user.image.attached? %>
          <%= link_to "プロフィール画像を削除", imgd_path(@user.id), method: :delete, data: {confirm: "削除しますか？"}, class: "image-delete-link" %>
        <% end %>
      </div>
      </div>
      <div class="edit-name">
        <%= f.label :name, class: "edit-label first-edit-label" %>
        <%= f.text_field :name, class: "edit-field edit-name-field" %>
      </div>
      <div class="edit-acount-id">
        <%= f.label :acount_id, class: "edit-label" %>
        <%= f.text_field :acount_id, class: "edit-field edit-acount-field" %>
      </div>
      <div class="edit-score">
        <%= f.label :score, class: "edit-label" %>
        <%= f.number_field :score, in: 5..990, step: 5, class: "edit-field edit-score-field" %>
      </div>
      <div class="edit-target-score">
        <%= f.label :target_score, class: "edit-label" %>
        <%= f.number_field :target_score, in: 400..990, step: 5, class: "edit-field edit-target-field" %>
      </div>
      <div class="edit-introduce">
        <%= f.label :introduce, class: "edit-label" %>
        <%= f.text_area :introduce, class: "edit-field edit-introduce-field" %>
      </div>
      <div><%= f.submit "Update", class: "edit-profile-button" %></div>
      <% end %>
  </div>
</div>
<footer></footer>
