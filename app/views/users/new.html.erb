<% provide(:title, 'Signup') %>

<div class="user-new-wrapper">
  <div class="user-new-container">
    <%= render 'shared/error_messages', object: @user %>
    <div class="user-new-form">
      <div class="signup-form">
        <%= form_for(@user) do |f| %>
          <div class="name-form">
              <%= f.label :name, class: "signup-label" %>
              <%= f.text_field :name, class: "signup-field" %>
          </div>

          <div class="signup acount-id-form">
            <%= f.label :acount_id, "User_id", class: "signup-label" %>
            <%= f.text_field :acount_id, class: "signup-field" %>
          </div>

          <div class="signup email-form">
            <%= f.label :email, class: "signup-label" %>
            <%= f.email_field :email, class: "signup-field" %>
          </div>

          <div class="signup assword-form">
            <%= f.label :password, class: "signup-label" %>
            <%= f.password_field :password, class: "signup-field" %>
          </div>

          <div class="signup confirmation-form">
            <%= f.label :password_confirmation, "Confirmation", class: "signup-label" %>
            <%= f.password_field :password_confirmation, class: "signup-field" %>
          </div>
          <%= f.submit "Signup", class: "signup-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
